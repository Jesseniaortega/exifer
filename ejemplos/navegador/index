<!DOCTYPE html>
<html>
  <head>
    <title>Demo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" href="/" />
  </head>

  <body>
    Read Exif image data. Select image:
    <input type="file" class="file" accept="image/*">
		<hr>
		<pre class="result"></pre>
		<script type="module">
			import exifer from '../../packages/exifer/src/index.js';
			import exif from '../../packages/exif/src/index.js';
			import iptc from '../../packages/iptc/src/index.js';
			import gps from '../../packages/gps/src/index.js';

			const picker = document.querySelector('.file');
			const result = document.querySelector('.result');

			picker.addEventListener('change', async () => {
				const file = picker.files[0];
				const parsed = await exifer(file, {tags: {exif, iptc, gps}});
				result.textContent = JSON.stringify(parsed, null, 2);
			});
		</script>
  </body>
</html>
